<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_system_flyingarea_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秦岭秦岭秦岭秦岭秦岭"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_system_flyingarea_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="105.311300"
                android:textSize="16sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_add_myflyingarea"
            android:textColor="#FFff5f10"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/ic_add_orange"
            android:layout_alignParentRight="true"
            android:text="添加到我的"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>