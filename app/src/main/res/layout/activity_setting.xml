<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="清除缓存"
            android:textColor="@color/colorText"
            android:textSize="@dimen/activity_about_clickitem_textsize"
             />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="20MB"
            android:textColor="@color/colorText"
            android:textSize="@dimen/activity_about_clickitem_textsize" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_width"
        android:background="@color/colorLayoutSplitLineGray" />
    <RelativeLayout
        android:id="@+id/ll_check_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="检查更新"
            android:textColor="@color/colorText"
            android:textSize="@dimen/activity_about_clickitem_textsize"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_next" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_width"
        android:background="@color/colorLayoutSplitLineGray" />
    <RelativeLayout
        android:id="@+id/ll_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="关于我们"
            android:textColor="@color/colorText"
            android:textSize="@dimen/activity_about_clickitem_textsize"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_next" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_width"
        android:background="@color/colorLayoutSplitLineGray" />

    <RelativeLayout
        android:id="@+id/ll_app_pingjia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:text="应用评分"
            android:textColor="@color/colorText"
            android:textSize="@dimen/activity_about_clickitem_textsize" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            app:srcCompat="@drawable/ic_next" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/split_line_width"
        android:background="@color/colorLayoutSplitLineGray" />
    <Button
        android:id="@+id/btn_outlogin"
        android:layout_margin="8dp"
        android:background="@drawable/bg_btn_normal"
        android:text="注销"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>