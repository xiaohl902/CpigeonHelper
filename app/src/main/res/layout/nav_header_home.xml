<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorHeader"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_userheadimage"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@mipmap/ic_header"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_userSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是签名，这是签名，这是签名，这是签名，这是签名，这是签名，这是签名，这是签名，这是签名，这是签名，"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#FFF"
        android:textSize="14sp"
        android:layout_marginBottom="8dp"
        android:layout_alignBottom="@id/iv_userheadimage"
        android:layout_toEndOf="@id/iv_userheadimage"
        android:layout_marginStart="16dp" />
    <TextView
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中鸽网"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_alignTop="@id/iv_userheadimage"
        android:layout_alignStart="@id/tv_userSign" />



</RelativeLayout>