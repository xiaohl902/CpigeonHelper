<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_open_vip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="32dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_geyuntong" />

            <TextView
                android:id="@+id/tv_geyuntong_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="开通鸽运通"
                android:textColor="@color/colorOpenVip"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_open_gxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="32dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_mathlive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="直播平台续费"
                android:textColor="@color/colorOpenGyt"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_xufei"
            android:background="@color/colorWhite"
            android:layout_margin="2dp"
            android:padding="32dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_xiehui_recharge"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:textColor="@color/colorXuFei"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_horizontal"
                android:text="协会续费"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_open_gyt"
            android:background="@color/colorWhite"
            android:layout_margin="2dp"
            android:padding="32dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_gexintong"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:textColor="@color/colorGxt"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_horizontal"
                android:text="开通鸽信通"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_gravity="end"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginRight="4dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/colorWhite"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_money"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="16sp"
                    android:text="余额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="4dp"
                android:background="@color/colorWhite"
                android:id="@+id/ll_recharge"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_rechargemoney"
                    android:layout_width="48dp"
                    android:layout_height="32dp" />
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="充值"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>