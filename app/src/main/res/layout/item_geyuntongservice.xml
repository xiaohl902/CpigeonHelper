<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/dp_4"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintlayout"
        android:background="@drawable/bg_normal"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="VIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/tv_gytservice_name" />
        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="绑定一个普通账户，可以同时监控两场比赛。"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_gytservice_name"
            android:layout_marginLeft="0dp"
            android:id="@+id/tv_gytservice_details"
            app:layout_constraintLeft_toLeftOf="@id/tv_gytservice_name" />
        <TextView
            android:id="@+id/tv_gytservice_price"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorWhite"
            android:text="600元/年"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/tv_open_gytservice"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:text="立即开通"
            android:background="@drawable/bg_btn_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_gytservice_details"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>