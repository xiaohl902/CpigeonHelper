<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorViewBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorWhite"
            android:background="@color/blue_btn_bg_color"
            android:id="@+id/tv_search"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_margin="8dp"
            android:text="搜索"
            android:textSize="18sp"/>

        <com.cpigeon.cpigeonhelper.ui.searchview.SearchEditText
            android:id="@+id/search_edittext"
            style="@style/SearchView"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/tv_search"
            android:hint="请输入需要添加授权用户的手机号"
            android:layout_marginStart="16dp"
            app:drawableDel="@mipmap/ic_delete"/>

    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:visibility="visible"
            android:id="@+id/recyclerview_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <include
            layout="@layout/layout_errorsearch"/>

    </FrameLayout>
</LinearLayout>