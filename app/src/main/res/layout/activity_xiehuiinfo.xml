<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorViewBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_xiehui_name"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:id="@+id/tv_xiehui_type_name"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="协会名称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_shotname"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="协会简称"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_shotname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_yuming"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="二级域名"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_yuming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_user"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="联系人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_tel"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="联系电话"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_tel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_mail"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="邮箱"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_address"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="详细地址"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_registertime"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="注册时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_registertime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_createtime"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="建立时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="right"

                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_createtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
                <LinearLayout
                    android:id="@+id/ll_xiehui_endtime"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorText"
                        android:layout_margin="16dp"
                        android:textSize="@dimen/sp_18"
                        android:text="到期时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView

                        android:layout_margin="16dp"
                        android:gravity="right"
                        android:textSize="@dimen/sp_18"
                        android:id="@+id/tv_xiehui_endtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:background="@color/colorLayoutSplitLineGray"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"/>
            </LinearLayout>
            <com.cpigeon.cpigeonhelper.ui.CustomEmptyView
                android:id="@+id/empty_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>



</LinearLayout>