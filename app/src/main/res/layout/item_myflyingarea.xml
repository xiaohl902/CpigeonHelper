<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_flyingarea_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秦岭秦岭秦岭秦岭秦岭"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_flyingarea_longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="105.311300"
                android:textSize="16sp" />


            <TextView
                android:maxLines="2"
                android:layout_marginRight="16dp"
                android:id="@+id/tv_flyingarea_discription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="这里是司放地的描述这里是司放地的描述这里是司放地的描述这里是司放地的描述这里是司放地的描述"
                android:textSize="14sp" />


        </LinearLayout>


        <TextView
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:id="@+id/tv_flyingarea_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_number"
            android:gravity="center_horizontal"
            android:text="1"
            android:textColor="@color/colorWhite" />
        <android.support.v7.widget.AppCompatImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_enter"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>